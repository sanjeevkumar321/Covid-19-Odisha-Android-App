<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5be4dc"
    tools:context="com.technogenr.ocovid.UpdateActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignStart="@+id/up1"
        android:layout_marginTop="53dp"
        android:text="Covid-19 Odisha"
        android:textColor="#fff"
        android:textSize="27sp"
        android:textStyle="bold" />
    <Button
        android:id="@+id/up2"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/up1"
        android:layout_below="@+id/up1"
        android:layout_gravity="center"
        android:layout_marginTop="43dp"
        android:background="@drawable/round"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:text="bmc(bbsr)"
        android:textColor="#fff"
        android:textSize="13dp" />


    <Button
        android:id="@+id/up1"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="150dp"
        android:background="@drawable/round"
        android:text="HFW Dept Odisha"
        android:textColor="#fff"
        android:textSize="13dp" />

    <Button
        android:id="@+id/up3"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/up2"
        android:layout_below="@+id/up2"
        android:layout_gravity="center"
        android:layout_marginTop="43dp"
        android:background="@drawable/round"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:text="All India"
        android:textColor="#fff"
        android:textSize="13dp" />

    <Button
        android:id="@+id/up4"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/up2"
        android:layout_alignStart="@+id/up2"
        android:layout_gravity="center"
        android:layout_marginStart="4dp"
        android:layout_marginTop="130dp"
        android:background="@drawable/round"
        android:text="Odisha List"
        android:textColor="#fff"
        android:textSize="13dp" />

</RelativeLayout>
