                android:weightSum="3"
                android:layout_marginBottom="6dp"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout5"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="405dp">

                <LinearLayout
                    android:id="@+id/l7"
