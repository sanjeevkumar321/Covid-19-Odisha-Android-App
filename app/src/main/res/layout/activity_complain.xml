<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    tools:context="com.technogenr.ocovid.ComplainActivity">

    <TextView
        android:id="@+id/tittle"
        android:textColor="@color/textcolor"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="70sp"
        android:gravity="center"
        android:text="complaints Box"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_marginTop="20sp"
        android:layout_marginLeft="10sp"
        android:layout_marginBottom="10sp"
        android:layout_marginRight="10sp"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="400sp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/demo"
        android:orientation="vertical">


        <EditText
            android:id="@+id/title"
            android:background="@drawable/shadow"
            android:layout_marginTop="27sp"
            android:layout_marginLeft="10sp"
            android:layout_marginBottom="10sp"
            android:layout_marginRight="10sp"
            android:hint="Write Topic"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="50sp" />
        <EditText
            android:background="@drawable/shadow"
            android:layout_marginTop="30sp"
            android:layout_marginLeft="10sp"
            android:layout_marginBottom="10sp"
            android:hint="Write Description"
            android:layout_marginRight="10sp"
            android:id="@+id/edit_text"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:inputType="text|textMultiLine"
            />
        <Button
            android:layout_marginTop="30sp"
            android:layout_marginLeft="10sp"
            android:layout_marginBottom="10sp"
            android:layout_marginRight="10sp"
            android:id="@+id/btn"
            android:layout_width="234dp"
            android:layout_height="54dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/roungbutton"
            android:gravity="center"
            android:text="Send"
            android:textColor="#FFF"
            android:textSize="23dp" />

    </LinearLayout>
    <ImageView
        android:layout_marginTop="80dp"
        android:layout_centerHorizontal="true"
        android:layout_width="120sp"
        android:layout_height="100sp"
        android:src="@drawable/complaints"
        />

</RelativeLayout>
